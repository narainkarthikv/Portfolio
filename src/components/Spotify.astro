---
const spotifyUrl =
  "https://spotify-github-profile.kittinanx.com/api/view?uid=31kjez2sc5umwskdatczxceb3xdi&cover_image=true&theme=spotify-embed&show_offline=false&background_color=121212&interchange=false&profanity=false&bar_color=53b14f&bar_color_cover=false&mode=dark";
---

<div class="spotify-card">
  <a
    href="https://github.com/kittinan/spotify-github-profile"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Open Spotify GitHub Profile Generator"
  >
    <img
      src={spotifyUrl}
      alt="Spotify GitHub Profile"
      class="spotify-img"
      loading="lazy"
    />
  </a>
</div>

<style>
  .spotify-card {
    width: 100%;
    max-width: 600px;
    margin: auto;
    border-radius: 1rem;
    overflow: hidden;
    display: flex;
    justify-content: center;
    background: var(--card-bg, #121212);
    box-shadow: 0 8px 24px rgba(16, 16, 16, 0.35);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .spotify-card:hover {
    transform: translateY(-4px) scale(1.015);
    box-shadow: 0 16px 32px rgba(16, 16, 16, 0.45);
  }

  .spotify-img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  /* Better responsiveness */
  @media (max-width: 480px) {
    .spotify-card {
      border-radius: 0.75rem;
    }
  }

  /* Optional light mode support */
  @media (prefers-color-scheme: light) {
    .spotify-card {
      --card-bg: #ffffff;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
    }
  }
</style>
