---
import Section from '../Section.astro'
import { languages } from '@cv'
---

<Section className={Astro.props.className} title="Languages">
  <ul
    class="
      inline-flex flex-wrap gap-2.5
      print:mt-4
    "
  >
    {languages.map(({ language, fluency }) => (
      <li
        class="
          group flex flex-col gap-1
          rounded-lg border border-skin-hue/25
          bg-skin-button-accent/15
          backdrop-blur-sm
          px-3 py-2.5
          cursor-default
          transition-all duration-300
          hover:border-skin-hue/40 hover:bg-skin-button-accent/25
          hover:shadow-md
          print:border-none print:bg-transparent print:p-0
        "
      >
        <span class="font-medium text-sm text-skin-base">{language}</span>
        <span class="text-[11px] text-skin-muted font-medium leading-tight">
          {fluency}
        </span>
      </li>
    ))}
  </ul>
</Section>
